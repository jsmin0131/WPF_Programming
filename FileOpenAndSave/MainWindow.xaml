<Window x:Class="FileOpenAndSave.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileOpenAndSave"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel Margin="10">
        <WrapPanel HorizontalAlignment="Center" DockPanel.Dock="Top" Margin="0,0,0,10">
            <Button Name="btnOpenFile" Click="btnOpenFile_Click">Open File</Button>
            <Separator Margin="5"/>
            <Button Name="btnSaveFile" Click="btnSaveFile_Click">Save File</Button>
        </WrapPanel>
        <TextBox Name="txtEditor" AcceptsReturn="True" AcceptsTab="True"/>
    </DockPanel>
</Window>